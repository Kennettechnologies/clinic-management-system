{
    "version": 2,
    "builds": [
        {
            "src": "clinic_management/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "clinic_management/wsgi.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "DJANGO_SETTINGS_MODULE": "clinic_management.settings"
    },
    "buildCommand": "pip install -r requirements.txt",
    "outputDirectory": ".",
    "ignoreCommand": "echo 'No ignore'",
    "rewrites": [
        {
            "source": "/static/(.*)",
            "destination": "/static/$1"
        },
        {
            "source": "/media/(.*)",
            "destination": "/media/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ]
} 